<div id="course_fies">
<%= render @course.course_files %>
</div>

<%= form_for [@course, CourseFile.new] do |f| %>
  <p>
  <div>
    <%= f.label :title, "标题" %> <br />
    <%= f.text_area :title, :rows => 1 %>
  </div>
  <div>
    <%= f.label :description, "描述" %> <br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <div>
    <%= f.label :file, "文件"%>
    <%= f.file_field :file%>
  </div>
  <p><%= f.submit "发布" %></p>
<% end %>


<%= link_to "返回课程页面",course_path(@course) %>