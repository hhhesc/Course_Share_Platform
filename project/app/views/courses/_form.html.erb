
<%= form_for [Course.new] do |f| %>
  <p>
  <div>
    <%= f.label :course_name, "名称" %> <br />
    <%= f.text_area :course_name, :rows => 1 %>
  </div>
  <div>
    <%= f.label :course_description, "描述" %> <br />
    <%= f.text_area :course_description, :rows => 5 %>
  </p>
  <p><%= f.submit "发布" %></p>
<% end %>