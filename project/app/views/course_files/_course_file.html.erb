<div class="col-md-4 mb-4">
  <div class="card d-flex ">
    <div class="card-body pb-5 d-flex align-items-start flex-column">


      <h5 class="h4 lh-130 mb-auto p-2"><%= course_file.title %></h5>
      <p class="text-muted p-2">
        <% if course_file.description.length <= 30 %>
          <%= course_file.description %>
        <% else %>
          <%= course_file.description[0..31] %>...
        <% end %>
      </p>
      <div class="d-flex justify-content-between align-items-center" style="height: 50px;">
        <%= link_to "文件下载", url_for(course_file.file), class: "btn btn-primary p-2" %>
        <% if current_user.admin == 1 %>
          <%= button_to "删除文件", course_course_file_path(@course, course_file),
                        method: :delete, class: "btn btn-danger p-2 ms-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
