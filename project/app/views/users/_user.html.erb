<div id="<%= dom_id user %>">
  <p>
    <%= link_to user.username, user_path(user), class: "my-link" %>
  </p>

  <p class="my-sign">
    <% if !user.personal_sign.nil? %>
      <%= user.personal_sign %>
    <% else %>
      暂无个性签名
    <% end %>
    <% if current_user == user || current_user.admin == 1 %>
      <%= link_to "编辑个性签名", edit_personal_sign_user_path(user), class: "btn btn-secondary btn-sm" %>
    <% end %>
  </p>
  <hr>
</div>
